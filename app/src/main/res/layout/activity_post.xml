<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:context="ca.projectpc.projectpc.ui.PostAdActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding">

        <ImageView
            android:src="@drawable/logo_long"
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal" />

        <!-- Title Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText android:id="@+id/post_ad_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:hint="@string/post_title" />

        </android.support.design.widget.TextInputLayout>

        <!-- Description -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText android:id="@+id/post_ad_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:hint="@string/post_description" />

        </android.support.design.widget.TextInputLayout>

        <!-- Currency -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:entries="@array/spinner_currencies"/>

        <!--Price-->

        <android.support.design.widget.TextInputLayout
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/spinner">

            <EditText
                android:id="@+id/post_ad_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/post_price"
                android:inputType="textCapWords" />

        </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <!-- Tags -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            >

            <EditText android:id="@+id/post_ad_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:hint="@string/post_tags" />

        </android.support.design.widget.TextInputLayout>

        <!-- Location -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText android:id="@+id/post_ad_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:hint="@string/post_location"/>

        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_one"
            android:src="@drawable/logo_long"
            android:layout_width="80dp"
            android:layout_height="100dp"
            />
            <ImageView
                android:id="@+id/image_two"
                android:src="@drawable/logo_long"
                android:layout_toRightOf="@+id/image_one"
                android:layout_width="80dp"
                android:layout_height="100dp"
                />
            <ImageView
                android:id="@+id/image_three"
                android:src="@drawable/logo_long"
                android:layout_toRightOf="@+id/image_two"
                android:layout_width="80dp"
                android:layout_height="100dp"
                />
            <ImageView
                android:id="@+id/image_four"
                android:src="@drawable/logo_long"
                android:layout_toRightOf="@+id/image_three"
                android:layout_width="80dp"
                android:layout_height="100dp"
                />
        </RelativeLayout>


        <!-- Upload Images Button -->
        <android.support.v7.widget.AppCompatButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="5dp"
            android:padding="12dp"
            android:text="@string/upload_image" />

        <!-- Post Ad Button -->
        <android.support.v7.widget.AppCompatButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:text="@string/post_button" />

    </LinearLayout>
</ScrollView>